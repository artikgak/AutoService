<UserControl x:Class="AutoService.Views.Tools.Control.CarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoService.Views.Tools.Control"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Width="100" Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Margin="5" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"
                   Content="{Binding CarName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></Label>
        <TextBlock Width="270" Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Margin="5" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"
                   Text="{Binding CarInfo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <Image Width="100" Height="100"  Margin="5" Grid.Column="0" Grid.Row="1" >
            <Image.Source>
                <BitmapImage UriSource=""></BitmapImage>
            </Image.Source>
        </Image>

        <Label Grid.Row="0" Grid.Column="2" Margin="5" >Begin Date/Time</Label>
        <DatePicker Grid.Row="1" Grid.Column="2" Margin="5" VerticalAlignment="Top" ></DatePicker>
        <Label Grid.Row="0" Grid.Column="3" Margin="5" >End Date/Time</Label>
        <DatePicker Grid.Row="1" Grid.Column="3" Margin="5" VerticalAlignment="Top" ></DatePicker>

        <Button Grid.Column="4" Grid.Row="1" VerticalAlignment="Top" Margin="5" >MoreInfo</Button>

        <Label Grid.Row="2" Grid.Column="2">Per day/hour:</Label>
        <Label Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center">Sum:</Label>
        <Button Grid.Column="4" Grid.Row="2" VerticalAlignment="Top" Margin="5" >Rent</Button>

    </Grid>
</UserControl>
